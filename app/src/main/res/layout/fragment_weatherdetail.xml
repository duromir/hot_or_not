<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/weather_item_box"
    android:layout_marginBottom="@dimen/margin_medium"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="04/07 21:00"
            android:id="@+id/txt_weather_time"
            android:textSize="@dimen/text_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Rain"
            android:id="@+id/txt_weather_short_descr"
            android:textSize="@dimen/text_large"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Light rain"
            android:id="@+id/txt_weather_long_descr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_wi_cloudy"
        />
    <TextView
        android:textAlignment="textEnd"
        android:id="@+id/txt_weather_temp"
        android:textSize="@dimen/text_huge"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />
    <!--
    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?attr/textAppearanceListItem" />
    -->
</LinearLayout>
